<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
			 version="1.0">
	<persistence-unit name="testMeitanDatabase">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<!--properties are useless here, they are red from hibernate.properties-->
		<class>com.meitan.lubov.model.persistent.BuyingAct</class>
		<class>com.meitan.lubov.model.persistent.Client</class>
		<class>com.meitan.lubov.model.persistent.Consultant</class>
		<class>com.meitan.lubov.model.persistent.Product</class>
		<class>com.meitan.lubov.model.persistent.Category</class>
		<class>com.meitan.lubov.model.Image</class>
		
		<properties>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.current_session_context_class" value="thread"/>
		</properties>
 	</persistence-unit>
</persistence>