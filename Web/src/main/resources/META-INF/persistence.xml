<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
			 version="1.0">
	<persistence-unit name="meitanDatabase">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<!--компоненты можно не указывать-->
        <!--todo why can't we merge this with /Meitan-mama/Web/src/test/resources/META-INF/persistence.xml? -->
		<class>com.meitan.lubov.model.persistent.BuyingAct</class>
		<class>com.meitan.lubov.model.persistent.Client</class>
		<!--<class>com.meitan.lubov.model.persistent.Consultant</class>-->
		<class>com.meitan.lubov.model.persistent.Product</class>
		<class>com.meitan.lubov.model.persistent.Category</class>
		<class>com.meitan.lubov.model.persistent.Image</class>
		<class>com.meitan.lubov.model.persistent.Authority</class>
		<class>com.meitan.lubov.model.persistent.ShoppingCartItem</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider"/>
		</properties>
	</persistence-unit>
</persistence>