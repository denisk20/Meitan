<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
		parent="abstractBoard">
	<persistence-context/>
	<on-start>
		<set name="flowScope.boardType" value="'ABOUT'"/>
		<set name="flowScope.viewName" value="'aboutUs'"/>
		<set name="flowScope.flowName" value="'about'"/>
	</on-start>

	<view-state id="aboutUs" parent="abstractBoard#abstractBoardViewState">
		<on-entry>
			<set name="flowScope.action" value="utils.getMethodExpression('selectGood')"/>
            <evaluate expression="productDao.getNew()" result="flowScope.newProducts"/>
        </on-entry>

		<transition on="selectGood" to="goodFlow">
			<set name="requestScope.productId" value="requestParameters.id"/>
		</transition>
	</view-state>

	<end-state id="goodFlow" view="flowRedirect:good?goodId=#{productId}"/>

</flow>