<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
		parent="global">
    <!--<persistence-context />-->

	<view-state id="aboutUs" parent="good#good">
        <on-render>
            <evaluate expression="productDao.getNew()" result="viewScope.newProducts" result-type="dataModel"/>
        </on-render>

		<transition on="selectGood" to="goodSubflow">
			<set name="flashScope.product" value="newProducts.selectedRow"/>
		</transition>
	</view-state>

	<subflow-state id="goodSubflow" subflow="good">
		<input name="goodId" value="product.id"/>
		<transition on="back" to="aboutUs"/>
	</subflow-state>

</flow>