<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      parent="global">

    <!--todo unit test this-->
    <var name="newClient" class="com.meitan.lubov.model.persistent.Client"/>

    <view-state id="register">
        <on-entry>
            <set name="newClient.enabled" value="true"/>
        </on-entry>
        <transition on="register" to="done">
            <evaluate expression="passwordsValidator.validatePasswords(newClient.password, newClient.conformedPassword, flowRequestContext)"/>
            <evaluate expression="captchaService.validateCaptcha(flowRequestContext)"/>

            <set name="newClient.role" value="'ROLE_CLIENT'"/>
            <set name="newClient.password" value="utils.getMD5(newClient.password)"/>

            <evaluate expression="clientDao.makePersistent(newClient)"/>
            <evaluate expression="securityService.authenticateUser(newClient)"/>
        </transition>

        <transition on="cancel" to="cancel"/>
        <transition on-exception="net.tanesha.recaptcha.ReCaptchaException" to="register"/>
        <!--passwords don't match-->
        <transition on-exception="java.lang.IllegalArgumentException" to="register"/>
    </view-state>

    <view-state id="error"/>

    <end-state id="done"/>
    <end-state id="cancel"/>
</flow>