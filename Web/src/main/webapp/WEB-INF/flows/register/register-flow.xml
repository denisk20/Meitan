<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      parent="global">

    <var name="newClient" class="com.meitan.lubov.model.persistent.Client"/>

    <view-state id="register">
        <transition on="register">
            <evaluate expression="captchaService.validateCaptcha(flowRequestContext)"/>
            <evaluate expression="clientDao.makePersistent(newClient)"/>
        </transition>

        <transition on-exception="net.tanesha.recaptcha.ReCaptchaException" to="register"/>
    </view-state>

    <view-state id="error"/>
</flow>