<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
		parent="global">

	<input name="categoryId" required="true"/>

	<view-state id="goodsListForCategory">
		<on-render>
			<evaluate expression="productDao.getForCategory(categoryId)" result="viewScope.products" result-type="dataModel"/>
		</on-render>
		<transition on="selectGood" to="goodSubflow">
			<set name="flashScope.product" value="products.selectedRow"/>
		</transition>

		<transition on="addGood" to="addGoodSubflow"/>
	</view-state>

	<subflow-state id="goodSubflow" subflow="good">
		<input name="goodId" value="product.id"/>
	</subflow-state>

	<subflow-state id="addGoodSubflow" subflow="addGood">
		<input name="categoryId" value="categoryId"/>
	</subflow-state>

</flow>