<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
		parent="global"
		start-state="allCategoriesQueried">

	<input name="categoryId" required="true" type="long"/>

	<decision-state id="allCategoriesQueried">
		<if test="categoryId != -1" then="goodsListForCategory" else="allGoodsList"/>
	</decision-state>

	<view-state id="baseGoodList" view="goodsListForCategory.xhtml">
		<transition on="selectGood" to="goodFlow">
			<set name="requestScope.productId" value="products.selectedRow.id"/>
		</transition>

		<transition on="edit" to="edit">
			<set name="flashScope.product" value="products.selectedRow"/>
		</transition>

		<transition on="editImages" to="imagesManager">
			<set name="flashScope.product" value="products.selectedRow"/>
		</transition>

		<!--todo this is not quite right. We don't have to execute anything to determine the actual flow-->
		<transition on="delete" to="allCategoriesQueried">
			<evaluate expression="productDao.deleteById(products.selectedRow.id)"/>
		</transition>

		<transition on="buy" to="allCategoriesQueried">
			<evaluate expression="cart.addItem(products.selectedRow)"/>
		</transition>
		<transition on="back" to="back"/>
	</view-state>

	<view-state id="goodsListForCategory" parent="viewGoods#baseGoodList">
		<on-entry>
			<evaluate expression="productDao.getForCategory(categoryId)" result="viewScope.products" result-type="dataModel"/>
		</on-entry>
	</view-state>

	<view-state id="allGoodsList" parent="viewGoods#baseGoodList" >
		<on-entry>
			<evaluate expression="productDao.findAll()" result="viewScope.products" result-type="dataModel"/>
		</on-entry>
	</view-state>

	<end-state id="goodFlow" view="flowRedirect:good?goodId=#{productId}"/>
	
	<subflow-state id="edit" subflow="editGood">
		<input name="productId" value="product.id"/>
		<!--todo hack again... see above comment-->
		<transition to="allCategoriesQueried"/>
	</subflow-state>

	<subflow-state id="imagesManager" subflow="imagesManager">
		<input name="imageAware" value="product"/>
		<!--todo hack again... see above comment-->
		<transition on="save" to="allCategoriesQueried"/>
	</subflow-state>

	<end-state id="back"/>
</flow>