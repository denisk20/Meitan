<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
		parent="global">

	<view-state id="abstractEditable" parent="global#menuAwareViewState">
		<transition on="select" to="selectFlow">
			<set name="requestScope.id" value="requestParameters.id"/>
		</transition>

		<transition on="edit" to="edit">
			<set name="flashScope.id" value="requestParameters.id" type="long"/>
		</transition>

		<transition on="editImages" to="imagesManager">
			<set name="flashScope.id" value="requestParameters.id" type="long"/>
		</transition>

		<transition on="delete" to="conformDelete">
            <set name="requestScope.id" value="requestParameters.id"/>
            <set name="requestScope.name" value="requestParameters.name"/>
		</transition>
	</view-state>

    <view-state id="conformDelete" view="../abstractEditable/conformDelete.xhtml">
        <on-entry>
            <set name="viewScope.deleteId" value="id" type="long"/>
            <set name="viewScope.name" value="name"/>
        </on-entry>

        <transition on="ok" to="#{outState}">
            <evaluate expression="dao.deleteById(deleteId)"/>
        </transition>

        <transition on="cancel" to="#{outState}"/>
    </view-state>

	<subflow-state id="edit" subflow="#{editFlow}">
		<input name="id" value="id"/>
		<transition to="#{outState}"/>
	</subflow-state>

	<subflow-state id="imagesManager" subflow="imagesManager">
		<input name="imageAwareId" value="id"/>
		<input name="className" value="className"/>
		<transition on="save" to="#{outState}"/>
	</subflow-state>

	<end-state id="selectFlow" view="flowRedirect:#{selectFlow}?id=#{id}"/>

</flow>