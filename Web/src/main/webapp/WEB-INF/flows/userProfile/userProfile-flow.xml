<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	  parent="global">

	<!--<secured attributes="ROLE_ANONYMOUS, ROLE_UNREGISTERED"/>-->

    <!--<var name="newClient" class="com.meitan.lubov.model.persistent.Client"/>-->

    <view-state id="userProfile">
        <on-entry>
			<evaluate expression="clientDao.findByLoginOrCreateNew(currentUser)" result="viewScope.newClient"/>
            <set name="newClient.enabled" value="true"/>
        </on-entry>
        <transition on="saveProfile" to="done">
            <evaluate expression="passwordValidator.validatePasswords(newClient.password, newClient.conformedPassword, flowRequestContext)"/>
            <evaluate expression="captchaService.validateCaptcha(flowRequestContext)"/>

            <set name="newClient.password" value="utils.getMD5(newClient.password)"/>
            
			<evaluate expression="clientDao.merge(newClient)" result="viewScope.newClient"/>
			<evaluate expression="authorityDao.assignAuthority(newClient, 'ROLE_CLIENT')"/>
            <evaluate expression="securityService.authenticateUser(newClient)"/>
        </transition>

        <transition on="cancel" to="cancel"/>
        <transition on-exception="net.tanesha.recaptcha.ReCaptchaException" to="userProfile"/>
		<!--passwords don't match-->
		<transition on-exception="java.lang.IllegalArgumentException" to="userProfile"/>
    </view-state>

    <view-state id="error"/>

    <end-state id="done" view="flowRedirect:/about"/>
    <end-state id="cancel" view="flowRedirect:/about"/>
</flow>