<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	  parent="global">

	<view-state id="categories">
		<on-entry>
			<evaluate expression="categoryDao.findAll()" result="viewScope.categories" result-type="dataModel"/>
		</on-entry>

		<transition on="selectCategory" to="goodsListForCategory">
			<set name="flashScope.category" value="categories.selectedRow"/>
		</transition>

		<transition on="edit" to="editCategory">
			<set name="flashScope.category" value="categories.selectedRow"/>
		</transition>

		<transition on="delete" to="categories">
			<evaluate expression="categoryDao.deleteById(categories.selectedRow.id)"/>
		</transition>
	</view-state>

	<subflow-state id="editCategory" subflow="editCategory">
		<input name="categoryId" value="category.id"/>
		<transition on="save" to="categories"/>
	</subflow-state>

	<subflow-state id="goodsListForCategory" subflow="viewGoods">
		<input name="categoryId" value="category.id"/>
	</subflow-state>

</flow>