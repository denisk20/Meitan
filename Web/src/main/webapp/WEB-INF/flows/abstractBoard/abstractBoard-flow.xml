<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
		parent="global">
<!--todo unit test-->
	<input name="lastSavedItem" required="false"/>
<!--this parent here is total hack to overcome the fact that views don't support multiple parents-->
	<view-state id="abstractBoardViewState" parent="baseGood#baseGood">
		<on-entry>
            <evaluate expression="newsBoardDao.getForType(boardType)" result="flowScope.board"/>
		</on-entry>
		<on-render>
			<evaluate expression="boardItemDao.newInstance()" result="viewScope.newNews"/>
			<evaluate expression="newsBoardDao.getForBoard(boardType)" result="viewScope.boardItems" result-type="dataModel"/>
		</on-render>

		<transition on="saveItem" to="saveItem">
			<evaluate expression="newsBoardDao.makePersistent(boardItems.selectedRow)"/>
			<set name="requestScope.savedItem" value="utils.getShortName(boardItems.selectedRow.content)"/>
		</transition>

		<transition on="deleteNews" to="#{viewName}">
			<evaluate expression="newsBoardDao.makeTransient(boardItems.selectedRow)"/>
		</transition>

		<transition on="create" to="#{viewName}">
			<evaluate expression="newNews.boards.add(board)"/>
			<evaluate expression="boardItemDao.makePersistent(newNews)"/>
		</transition>

	</view-state>

	<end-state id="saveItem" view="flowRedirect:#{flowName}?lastSavedItem=#{savedItem}" commit="true"/>

</flow>