<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	  parent="global">

	<var name="newGood" class="com.meitan.lubov.model.persistent.Product"/>

	<view-state id="addGood">
		<on-entry>
			<evaluate expression="categoryDao.findAll()" result="viewScope.categories" result-type="selectItems"/>
		</on-entry>

		<transition on="create" to="create">
			<evaluate expression="productDao.makePersistent(newGood)"/>
		</transition>

		<transition on="back" to="back"/>
        
	</view-state>

	<end-state id="create"/>
	<end-state id="back"/>
</flow>