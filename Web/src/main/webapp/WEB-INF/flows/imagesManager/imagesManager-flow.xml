<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	  parent="global">

	<persistence-context/>

	<input name="imageAware" required="true"/>
	<!--todo-->
	<!--<input name="imagesDao" required="true"/>-->

	<view-state id="imagesManager">
		<on-entry>
			<evaluate expression="utils.asList(imageAware.getImages())" result="viewScope.images" result-type="dataModel"/>
		</on-entry>
		<transition on="upload" to="imagesManager">
			<evaluate expression="fileUploadHandler.precessTempFile(imageAware, flowRequestContext)" result="requestScope.image"/>
			<evaluate expression="tempImagesService.addToPersistQueue(image)"/>
<!--
			<evaluate expression="imageDao.makePersistent(image)"/>
			<evaluate expression="categoryDao.merge(imageAware)"/>
-->
		</transition>

		<transition on="delete" to="imagesManager">
			<evaluate expression="imageAware.removeImage(images.selectedRow)"/>
			<!--<evaluate expression="tempImagesService.addToDiscardQueue(images.selectedRow)"/>-->
			<evaluate expression="imageDao.deleteFromDisk(images.selectedRow)"/>
			<!--<evaluate expression="categoryDao.merge(imageAware)"/>-->
		</transition>

		<transition on="save" to="save"/>
	</view-state>

	<end-state id="save"/>
	<end-state id="cancel"/>
</flow>