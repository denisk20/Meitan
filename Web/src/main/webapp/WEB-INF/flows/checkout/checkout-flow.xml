<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      parent="global">

    <view-state id="checkout" model="cart">
<!--
        <on-entry>
            <evaluate expression="cart.getItems()" result="viewScope.shoppingCartItems" result-type="dataModel"/>
        </on-entry>
-->

        <transition on="delete" to="checkout" >
            <evaluate expression="cart.deleteItem(cart.itemsDataModel.selectedRow)"/>
        </transition>
        
        <transition on="quantityChanged">
            <render fragments="checkout:cartItemsFragment,topPanelForm:shoppingCartFragment"/>
        </transition>

    </view-state>


    <end-state id="save" commit="true"/>

    <end-state id="cancel" view="flowRedirect:categories"/>
</flow>