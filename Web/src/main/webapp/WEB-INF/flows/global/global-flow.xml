<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
	
	<end-state id="aboutFlow" view="flowRedirect:about"/>
	<end-state id="joinFlow" view="flowRedirect:join"/>
	<end-state id="categoriesFlow" view="flowRedirect:categories"/>
	<end-state id="boardFlow" view="flowRedirect:board"/>

	<global-transitions>
		<transition on="about_action" to="aboutFlow"/>
		<transition on="browseCategories" to="categoriesFlow"/>
		<transition on="joinUs" to="joinFlow"/>
		<transition on="board" to="boardFlow"/>
	</global-transitions>

</flow>