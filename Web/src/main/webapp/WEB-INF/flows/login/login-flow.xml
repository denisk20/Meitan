<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      parent="global">

    <!--todo unit test this-->

    <var name="usernamePassword" class="com.meitan.lubov.services.util.UsernamePassword"/>

    <view-state id="login" model="usernamePassword">
        <transition on="login" to="processLogin"/>
        <transition on="register" to="registerSubflow"/>
    </view-state>

    <end-state id="processLogin" view="externalRedirect:contextRelative:/spring/loginProcess?j_username=#{usernamePassword.username}&amp;j_password=#{usernamePassword.password}"/>

    <subflow-state id="registerSubflow" subflow="register">
        <transition on="done" to="done"/>
        <transition on="cancel" to="login"/>
    </subflow-state>

    <end-state id="done" view="flowRedirect:about"/>
</flow>