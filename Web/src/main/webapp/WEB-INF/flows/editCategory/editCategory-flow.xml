<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	  parent="global">

	<persistence-context/>

	<var name="tempImagesService" class="com.meitan.lubov.services.util.TempImagesService"/>

	<input name="categoryId" required="true"/>

	<on-start>
		<evaluate expression="categoryDao.findById(categoryId)" result="flowScope.category"/>
	</on-start>

	<view-state id="edit" model="category">
		<transition on="save" to="save">
			<!--write on disk first-->
			<evaluate expression="tempImagesService.persistImages()"/>
			<!--persist to the database-->
			<evaluate expression="categoryDao.makePersistent(category)"/>
			<!--delete images that were deleted-->
			<evaluate expression="tempImagesService.discardImages()"/>
		</transition>

		<!--
		  <transition on="upload">
			  <evaluate expression="fileUploadHandler.processFile(category, flowRequestContext)"/>
			  &lt;!&ndash;<evaluate expression="categoryDao.makePersistent(category)"/>&ndash;&gt;
		  </transition>
  -->

		<!--
		  <transition on="delete" >
			  <evaluate expression="categoryDao.dropImage(category)"/>
		  </transition>
  -->

		<transition on="editImages" to="editImagesSubflow"/>

		<transition on="back" to="cancel">
			<evaluate expression="tempImagesService.discardImages()"/>
			<evaluate expression="tempImagesService.revertDeletedImages()"/>
		</transition>

	</view-state>

	<subflow-state id="editImagesSubflow" subflow="imagesManager">
		<input name="imageAware" value="category"/>
		<!--todo-->
		<!--<input name="imagesDao" value="categoryDao"/>-->

		<transition on="save" to="edit"/>
		<transition on="cancel" to="edit">
			<evaluate expression="tempImagesService.discardImages()"/>
			<!--<evaluate expression="tempImagesService.revertDeletedImages()"/>-->
		</transition>
	</subflow-state>

	<end-state id="save" commit="true"/>
	<end-state id="cancel"/>
</flow>