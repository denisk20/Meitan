<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	  parent="global">


    <secured attributes="ROLE_ADMIN"/>

    <persistence-context/>

	<input name="categoryId" required="true"/>

	<on-start>
		<evaluate expression="categoryDao.findById(categoryId)" result="flowScope.category"/>
	</on-start>

	<view-state id="edit" model="category">
		<transition on="save" to="save">
			<!--write on disk first-->
		</transition>

		<!--
		  <transition on="upload">
			  <evaluate expression="fileUploadHandler.processFile(category, flowRequestContext)"/>
			  &lt;!&ndash;<evaluate expression="categoryDao.makePersistent(category)"/>&ndash;&gt;
		  </transition>
  -->

		<!--
		  <transition on="delete" >
			  <evaluate expression="categoryDao.dropImage(category)"/>
		  </transition>
  -->

		<transition on="back" to="cancel">
			<!--<evaluate expression="tempImagesService.discardImages()"/>-->
		</transition>

	</view-state>


	<end-state id="save" commit="true"/>
	<end-state id="cancel"/>
</flow>